# Alejandria Configuration
# Copy this file to .env and configure your settings

# Application
APP_NAME=Alejandria
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://manga:changeme@postgres:5432/alejandria

# Directories
DOWNLOAD_DIR=/downloads
MANGA_DIR=/manga
KINDLE_DIR=/manga/kindle

# Kindle Email Configuration
KINDLE_EMAIL=your-kindle@kindle.com

# SMTP Configuration (for sending to Kindle)
# Gmail example: smtp.gmail.com:587
# You may need to use an App Password for Gmail
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Scheduler Configuration
CHECK_INTERVAL_HOURS=6
CLEANUP_DAYS=7
MAX_CONCURRENT_DOWNLOADS=3

# KCC (Kindle Comic Converter) Settings
KCC_PROFILE=KPW5
KCC_FORMAT=EPUB
KCC_QUALITY=95

# Scraper Settings
SCRAPER_RATE_LIMIT=1.0
SCRAPER_TIMEOUT=15

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:7878"]

# Security (optional)
SECRET_KEY=change-me-in-production-use-strong-random-string
API_KEY=

# Logging
LOG_LEVEL=INFO

# TeraBox Configuration (for downloading from TeraBox links)
# See TERABOX_SETUP.md for instructions on how to get these values
TERABOX_COOKIE=
TERABOX_JS_TOKEN=
TERABOX_DP_LOGID=
